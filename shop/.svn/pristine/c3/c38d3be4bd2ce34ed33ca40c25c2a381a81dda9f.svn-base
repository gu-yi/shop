<?php
namespace Admin\Controller;

use Think\Controller;
use Think\Verify;

/**登录管理
 * Class LoginController
 * @package Admin\Controller
 */
class LoginController extends Controller
{
    /**
     * 登录控制器
     */
    public function login()
    {
//        echo md5('123');die;
       //登录数据处理
        if (IS_POST){
          $data = I('post.');
            $verify = new Verify();
         if ($verify->check($data['captcha'])){
            $model =D('Admin');
            $data = $model->where(array('username'=>$data['admin_user'],'password'=>md5($data['admin_psd'])))->find();
            if ($data){
                session('username',$data['username']);//保存用户用户名
                session('role_id',$data['role_id']);
                $this->success('登录成功',U('index/index'));
            }else{
                $this->error('密码或者账号错误');
            }
            }else{
               $this->error('验证码错误');
            }
        }else{
            $this->display('login');
        }

    }

    /**
     * 验证码处理
     */
    public function verify()
    {
         $config =	array(
            'useImgBg'  =>  false,           // 使用背景图片
            'fontSize'  =>  12,              // 验证码字体大小(px)
            'useCurve'  =>  false,            // 是否画混淆曲线
            'useNoise'  =>  false,            // 是否添加杂点
            'imageH'    =>  23,               // 验证码图片高度
            'imageW'    =>  80,               // 验证码图片宽度
            'length'    =>  1,               // 验证码位数
            'fontttf'   =>  '6.ttf',              // 验证码字体，不设置随机获取
        );
          $verify = new Verify($config);
          $verify->entry();
    }
    /**
     * 退出操作
     */
    public function loginOut()
    {
        session(null);
        if (!session('?username')){
            $this->success('安全退出成功',U('Login/login'));
        }
    }

}